ScreenManager:
    ChatbotScreen:

<ChatbotScreen>:
    name: "chatbot_screen"

    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1  # Light gray background for a modern look
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"

        # === TOP NAVIGATION BAR ===
        BoxLayout:
            size_hint_y: 0.12
            padding: [15, 10]
            spacing: 10
            canvas.before:
                Color:
                    rgba: 0.15, 0.5, 0.8, 1  # Sleek blue header
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "MentalHealthBot"
                color: 1, 1, 1, 1
                font_size: 20
                bold: True

        # === CHAT WINDOW (SCROLLABLE) ===
        ScrollView:
            id: chat_scroll
            do_scroll_x: False
            bar_width: 5  # Slim scrollbar for a cleaner look

            BoxLayout:
                id: chat_box
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: [15, 15]
                spacing: 10

        # === INPUT FIELD AND SEND BUTTON ===
        BoxLayout:
            size_hint_y: 0.15
            padding: [10, 5]
            spacing: 10
            canvas.before:
                Color:
                    rgba: 0.85, 0.85, 0.85, 1  # Smooth light gray input field
                Rectangle:
                    pos: self.pos
                    size: self.size

            TextInput:
                id: user_input
                hint_text: "Type a message..."
                multiline: False
                size_hint_x: 0.75
                font_size: 16
                foreground_color: 0, 0, 0, 1  # Black text for readability
                background_color: 1, 1, 1, 1  # White background for a clean input field

            Button:
                text: "Send"
                size_hint_x: 0.2
                background_color: (0.15, 0.5, 0.8, 1)  # Matching blue color with the header
                color: 1, 1, 1, 1
                bold: True
                on_press: app.send_message()
